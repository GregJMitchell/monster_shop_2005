<body>
  <h1><%= @merchant.name %></h1>
  <h4><%= @merchant.full_address %></h4>
  <%= link_to "My Items", "/merchant/items?merchant_id=#{@merchant.id}" %>
  <%= link_to "New Bulk Discount", "/merchant/bulk-discount/new", method: 'get' %>

  <h3>Current Bulk Discounts</h3>

  <h3>Merchant Orders To Fulfill:</h3>
  <% @merchant.pending_orders.each do |order| %>
    <p><%= link_to "#{order.id}", "/merchant/orders/#{order.id}"  %></p>
    <p><%= order.created_at %></p>
    <h3>Order Quantity:</h3>
    <p><%= order.item_qty(@merchant.id) %></p>
    <h3>Total Value of Order:</h3>
    <p><%= order.total_value(@merchant.id) %></p>
  <% end %>
</body>

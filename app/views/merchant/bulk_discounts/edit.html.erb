<%= form_with url: "/merchant/bulk_discounts/#{params[:id]}", model: @bulk_discount, local: true do |f| %>
  <%= f.label :item_name %>
  <%= f.text_field :item_name, :value => @bulk_discount.item.name %>
  
  <%= f.label :discount %>
  <%= f.text_field :discount , :value => @bulk_discount.discount %>

  <%= f.label :quantity %>
  <%= f.text_field :quantity , :value => @bulk_discount.quantity %>

  <%= f.hidden_field :merchant_id , :value => current_user.merchant.id %>

  <%= f.submit %>
<% end %>
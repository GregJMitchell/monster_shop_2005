<h2> <%= link_to "New Bulk Discount", new_merchant_bulk_discount_path %></h2>

<h3>Current Bulk Discounts</h3>
  <% @merchant.bulk_discounts.each do |discount|%>
    <div id="discount-<%= discount.id %>">
    <p><%= link_to "Bulk Discount ##{discount.id}", merchant_bulk_discount_path(discount.id) %></p>
    <p><%= discount.item.name %></p>
    </div>
    <% end %>